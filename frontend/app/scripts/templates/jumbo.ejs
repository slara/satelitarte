      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title"><%= name %> (<%= images.length %> imag.)</h4>
      </div>
      <div class="modal-body">

    <div id="carousel-example-generic" class="carousel slide">
      <!-- Indicators -->
      <ol class="carousel-indicators">
        <li data-target="#carousel-example-generic" data-slide-to="0"></li>
        <%if (images.length > 1) { %>
            <li data-target="#carousel-example-generic" data-slide-to="1"></li>
        <% } %>
        <%if (images.length > 2) { %>
            <li data-target="#carousel-example-generic" data-slide-to="2"></li>
        <% } %>
      </ol>

      <!-- Wrapper for slides -->
      <div class="carousel-inner">

        <div class="item active">
          <img class="image" src="<%= images[0] %>" alt="...">
          <div class="carousel-caption">
          </div>
        </div>

        <%if (images.length > 1) { %>
            <div class="item">
              <img class="image" src="<%= images[1] %>" alt="...">
              <div class="carousel-caption">
              </div>
            </div>
        <% } %>

        <%if (images.length > 2) { %>
            <div class="item">
              <img class="image" src="<%= images[2] %>" alt="...">
              <div class="carousel-caption">
              </div>
            </div>
        <% } %>


      </div>

      <!-- Controls -->
      <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
        <span class="icon-prev"></span>
      </a>
      <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
        <span class="icon-next"></span>
      </a>
    </div>



      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
        <button id="selectionsubmit" type="button" class="btn btn-primary">Seleccionar tema</button>
      </div>

